{
  "extends": [
    "config:base",
    ":assignAndReview(viceice)",
    ":automergeDigest",
    "docker:enableMajor"
  ],
  "semanticCommits": true,
  "timezone": "Europe/Berlin",
  "automergeType": "pr-comment",
  "automergeComment": "bors r+",
  "labels": ["deps"],
  "packageRules": [
    {
      "packageNames": ["rancher/cli"],
      "allowedVersions": "<2.0"
    },
    {
      "packageNames": ["renovate/renovate"],
      "extends": [":automergeMinor"],
      "enabled": false
    },
    {
      "paths": ["docker/dotnet-aspnet", "docker/dotnet-sdk"],
      "allowedVersions": "<3.0"
    },
    {
      "packagePatterns": ["mcr.microsoft.com/dotnet/core"],
      "groupName": "dotnet core images"
    }
  ]
}
